<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_cases">

    <fragment
        android:id="@+id/navigation_cases"
        android:name="com.moomen.coronavirus.ui.CasesFragment"
        android:label="@string/title_home"
        tools:layout="@layout/fragment_cases" />

    <fragment
        android:id="@+id/navigation_news"
        android:name="com.moomen.coronavirus.ui.NewsFragment"
        android:label="@string/title_dashboard"
        tools:layout="@layout/fragment_news" />

    <fragment
        android:id="@+id/navigation_map"
        android:name="com.moomen.coronavirus.ui.MapFragment"
        android:label="@string/title_notifications"
        tools:layout="@layout/fragment_map" />
</navigation>
